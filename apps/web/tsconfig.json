{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "strict": true,
  "noImplicitAny": true,
  "module": "ESNext",
  "moduleResolution": "Bundler",
  "skipLibCheck": true,
  "useDefineForClassFields": true
}
